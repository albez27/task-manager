<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="07-11-2024-create-task-user-table" author="Aleksandr_Bezrukov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="user_task"/>
            </not>
        </preConditions>
        <createTable tableName="user_task">
            <column name="id" type="bigint"/>
            <column name="task_id" type="bigint"/>
            <column name="user_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="07-11-2024-create-task-table" author="Aleksandr_Bezrukov">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="task"/>
            </not>
        </preConditions>
        <createTable tableName="task">
            <column name="id" type="bigint"/>
            <column name="name" type="varchar(255)"/>
            <column name="description" type="varchar(255)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>